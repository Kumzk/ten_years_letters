<div class="devise-box">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
<div class="form-wrapper">
  <h1>Sign up</h1>
  <form>
  <div class="form-item">
    <%= f.text_field :name,  autocomplete: "name", placeholder: "UserName" %>
  </div>

  <div class="form-item">
    <%= f.label :birthday %><br />
    <%= f.date_field :birthday,  autocomplete: "birthday" %>
  </div>

  <div class="form-item">
    <%= f.email_field :email,  autocomplete: "email", placeholder:"Email Address" %>
  </div>

  <div class="form-item">
    <% if @minimum_password_length %>
    <em><%  @minimum_password_length %></em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password",   placeholder: "Password"%>
  </div>

  <div class="form-item">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder:"Password
Confirmation"%>
  </div>
</form>

  <div class="button-panel">
    <%= f.submit "Sign up" , class: "button" %>
  </div>

<div class="form-footer"
<%= render "devise/shared/links" %>
<% end %>
</div>
</div>
</div>
